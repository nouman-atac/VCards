{{#if msg}}
        <div class="alert alert-warning alert-dismissible fade show" style="margin-top:50px;" role="alert">
            <p class="text-center" style="padding:0px;">{{msg}}</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
{{/if}}
<form action="/admin/login" class="form-signin" method="POST">
    <img class="mb-4" src="img/icons8-enter-96.png" alt="" width="90" height="85">
    <h1 class="h3 mb-3 font-weight-normal">Admin Login</h1>

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" name="inputEmail" class="form-control" placeholder="Email address" required><br>
    
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="inputPassword" class="form-control" placeholder="Password" required><br>
    
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>